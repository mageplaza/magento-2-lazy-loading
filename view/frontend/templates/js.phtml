<script>
    require([
        'jquery',
        'lazyLoad'
    ], function ($) {
        var excludeCss = <?= $block->getExcludeCss() ?>,
            excludeText = <?= $block->getExcludeText() ?>;

        function removeClass(img) {
            img.removeClass('mplazyload');
            img.removeClass('mplazyload-blur');
            img.removeClass('mplazyload-icon');
            img.removeClass('mplazyload-cms');
        }

        $(document).ready(function() {
            $('img').each(function() {
                var i, j, img = $(this),
                    alt = img.attr('alt') ? img.attr('alt') : '',
                    title = img.attr('title') ? img.attr('title') : '',
                    src = img.attr('data-src');

                for (i = 0; i < excludeCss.length; i++) {
                    if (img.hasClass(excludeCss[i])) {
                        img.attr('src', src);
                        removeClass(img);
                    }
                }

                for (j = 0; j < excludeText.length; j++) {
                    if (alt.includes(excludeText[j]) || title.includes(excludeText[j])) {
                        img.attr('src', src);
                        removeClass(img);
                    }
                }
            });

            $('.mplazyload').lazy({
                threshold: <?= $block->getThreshold() ?>,
                effect: "fadeIn",
                effectTime: 1000,
                afterLoad: function(e) {
                    e.removeClass('mplazyload-blur');
                    e.removeClass('mplazyload-icon');
                    e.removeClass('mplazyload-cms');
                },
            });
        });
    });
</script>

<style>
    img.mplazyload-icon {
        width: <?= $block->getResizeWith() . 'px' ?>;
        height: <?= $block->getResizeHeight() . 'px' ?>;
    }
    img.mplazyload-cms {
        padding-left: 50%;
    }
    img.mplazyload-blur {
        transition: 0.3s filter linear;
        -o-transition: 0.3s -o-filter linear;
        -webkit-filter: blur(5px);
        filter: blur(5px);
    }
</style>